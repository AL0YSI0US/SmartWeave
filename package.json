{
  "name": "smartweave",
  "version": "0.4.0",
  "description": "Uses lazy-evaluation to move the burden of contract execution from network nodes to smart contract users.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf ./lib",
    "lint": "eslint --ext .ts,.js src/ examples/",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "smartweave-cli": "lib/bin/smartweave-cli.js",
    "smartweave": "lib/bin/smartweave.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArweaveTeam/SmartWeave.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArweaveTeam/SmartWeave/issues"
  },
  "homepage": "https://github.com/ArweaveTeam/SmartWeave#readme",
  "dependencies": {
    "@weavery/clarity": "^0.1.5",
    "arweave": "^1.9.1",
    "bignumber.js": "^9.0.1",
    "localporridge": "^1.0.0",
    "loglevel": "^1.7.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/yargs": "^15.0.9",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "cp-cli": "^2.0.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.1",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
